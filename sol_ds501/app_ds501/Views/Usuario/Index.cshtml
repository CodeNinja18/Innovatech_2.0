@model app_ds501.Models.Usuario

@{
    Layout = null;
    ViewData["Title"] = "Iniciar Sesión";
}

</style>


<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/app_ds501.styles.css" asp-append-version="true" />
<link rel="icon" href="~/img/Smart_Fit_logo_page.png" asp-append-version="true" />
<link rel="stylesheet" href="~/lib/font-awesome/css/all.css" asp-append-version="true" />
<link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css"></link>
<link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css"></link>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

<link rel="stylesheet" href="~/lib/font-awesome/css/all.css" asp-append-version="true" />

<div class="container" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
    <div class="row justify-content-center">
        <div class="col-md-4 rounded-3 p-5" style="background-color: whitesmoke">
            <div class="text-center mb-2">
                <img width="120" src="~/img/Smart_Fit_logo.png" alt="logo" />
            </div>
            <div class="ibox-content">
                <form asp-action="Index" method="post">
                    <div class="form-group mb-2">
                        <div class="input-group">
                            <input asp-for="correo" type="email" class="form-control" placeholder="Email" required=""
                                   style="padding-right: 40px;"> <!-- Ajusta el valor según sea necesario -->
                            <i class="fa fa-envelope" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%);"></i>
                        </div>
                    </div>

                    <div class="form-group mb-2">
                        <div class="input-group">
                            <input asp-for="contra" type="password" class="form-control" placeholder="Contraseña" required=""
                                   style="padding-right: 40px;"> <!-- Ajusta el valor según sea necesario -->
                            <i class="fas fa-lock" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%);"></i>
                        </div>
                    </div>

                    <div class="form-group mb-2 text-center">
                        <!-- Agregado el div text-center -->
                        <button type="submit" class="btn btn-primary col-12">Ingresar</button> <!-- Agregada la clase col-12 -->
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<script src="~/lib/font-awesome/js/all.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/font-awesome/js/all.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
