<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/app_ds501.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/img/Smart_Fit_logo_page.png" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css"></link>
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css"></link>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" asp-append-version="true" />

    <link rel="icon" href="~/img/Smart_Fit_logo_page.png" asp-append-version="true" />

    @await RenderSectionAsync("EstiloDT", required: false)

</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-auto min-vh-100 " style="background-color:#25A3D6;">
          
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-white">
                            <i class="fas fa-home"></i> Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Personal" asp-action="Index" class="nav-link text-white">
                            <i class="fas fa-user"></i> Personal
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Servicio" asp-action="Index" class="nav-link text-white">
                            <i class="fas fa-cogs"></i> Servicios
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Promocion" asp-action="Index" class="nav-link text-white">
                            <i class="fas fa-tag"></i> Promociones
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Metodo" asp-action="Index" class="nav-link text-white">
                            <i class="fas fa-credit-card"></i> Metodos de pago
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Cliente" asp-action="Index" class="nav-link text-white">
                            <i class="fas fa-users"></i> Clientes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Inscripcion" asp-action="Index" class="nav-link text-white">
                            <i class="fas fa-edit"></i> Inscripcion
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Usuario" asp-action="Index" class="btn btn-danger" style="width: 100%; display: flex; align-items: center;">
                            <i class="fas fa-sign-out-alt" style="margin-right: 10px;"></i> Salir
                        </a>
                    </li>


                </ul>

            </div>
            <!-- Contenido principal -->
            <div class="col">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <script src ="~/lib/font-awesome/js/all.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.nav-item').click(function () {
                // Elimina la clase 'active' de todos los elementos con la clase 'nav-item'
                $('.nav-item').removeClass('active');
                // Agrega la clase 'active' al padre del enlace clickeado
                $(this).addClass('active');
            });
        });
    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
